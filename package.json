{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "personal-assistant",
  "version": "1.0.0",
  "title": "Personal Assistant",
  "description": "An AI-driven personal assistant for seamless daily integration.",
  "icon": "extension-icon.png",
  "author": "lachie_james",
  "categories": [
    "Productivity",
    "Communication"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "activate-assistant",
      "title": "Activate Assistant",
      "subtitle": "Start your AI-powered personal assistant",
      "description": "Initiates the personal assistant to help manage tasks and provide conversational support.",
      "mode": "view",
      "preferences": [
        {
          "name": "openaiApiKey",
          "title": "OpenAI API Key",
          "description": "Your OpenAI API key",
          "type": "password",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "1.84.12",
    "@raycast/utils": "1.18.0",
    "node-fetch": "3.3.2",
    "openai": "4.77.3",
    "ws": "8.18.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.11",
    "@types/jest": "29.5.0",
    "@types/node": "22.9.0",
    "@types/react": "18.3.12",
    "@types/ws": "8.5.13",
    "eslint": "8.57.1",
    "jest": "29.5.0",
    "prettier": "3.3.3",
    "ts-jest": "29.1.0",
    "typescript": "5.6.3"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish",
    "test": "jest --passWithNoTests"
  }
}
